<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <wildcard>true</wildcard>
    </configuration>
    <mapping>
        <class-a>org.betsev.acp.business.contact.entity.GCivicContact</class-a>
        <class-b>org.betsev.acp.business.contact.entity.Contact</class-b>
        <field custom-converter="org.betsev.acp.support.converters.ContactPhoneConverter"
               custom-converter-param="dc">
            <a>phones</a>
            <b>dcPhone</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactPhoneConverter"
               custom-converter-param="district">
            <a>phones</a>
            <b>districtPhone</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactAddressConverter"
               custom-converter-param="dc">
            <a>address</a>
            <b>dcAddress</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactAddressConverter"
               custom-converter-param="district">
            <a>address</a>
            <b>districtAddress</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactSocialMediaConverter"
               custom-converter-param="Facebook">
            <a>channels</a>
            <b>facebook</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactSocialMediaConverter"
               custom-converter-param="Twitter">
            <a>channels</a>
            <b>twitter</b>
        </field>
        <field custom-converter="org.betsev.acp.support.converters.ContactSocialMediaConverter"
               custom-converter-param="Youtube">
            <a>channels</a>
            <b>youtube</b>
        </field>
    </mapping>
    </mappings>